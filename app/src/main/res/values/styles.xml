<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title">
        <item name="android:textSize">32sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="subtitle" parent="title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="sessionId">
        <item name="android:textSize">12sp</item>
        <item name="alpha">0.5</item>
    </style>

    <style name="primaryButton">
        <item name="android:backgroundTint">@color/caribe_blue</item>
    </style>

    <style name="secondaryButton">
        <item name="android:backgroundTint">@color/rosy_brown</item>
    </style>

</resources>